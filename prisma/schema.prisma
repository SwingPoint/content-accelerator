// Prisma schema for multi-tenant Content Accelerator

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== AUTH MODELS ====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed, for email/password auth
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  memberships   Membership[]
  invitations   Invitation[]
  comments      Comment[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ==================== MULTI-TENANT MODELS ====================

model Workspace {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  memberships Membership[]
  projects    Project[]
  invitations Invitation[]
  settings    WorkspaceSettings?

  @@map("workspaces")
}

model Membership {
  id          String   @id @default(cuid())
  role        Role     @default(STAFF)
  userId      String
  workspaceId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
  @@map("memberships")
}

enum Role {
  OWNER
  STAFF
  CLIENT
}

model Invitation {
  id          String   @id @default(cuid())
  email       String
  role        Role     @default(CLIENT)
  token       String   @unique
  expiresAt   DateTime
  workspaceId String
  invitedById String
  createdAt   DateTime @default(now())
  acceptedAt  DateTime?

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedBy User      @relation(fields: [invitedById], references: [id])

  @@map("invitations")
}

// ==================== PROJECT & CONTENT MODELS ====================

model Project {
  id          String   @id @default(cuid())
  name        String
  slug        String
  workspaceId String
  
  // Business details
  businessName String
  region       String
  website      String?
  valueProp    String?
  brandVoice   String?
  
  // Content settings
  platforms    String[] // ["facebook", "instagram", "linkedin", "gbp", "tiktok", "youtube", "email"]
  timezone     String   @default("America/Los_Angeles")
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  workspace    Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  contentWeeks ContentWeek[]

  @@unique([workspaceId, slug])
  @@map("projects")
}

model ContentWeek {
  id        String   @id @default(cuid())
  projectId String
  slug      String   // week-01-ai-hvac-maintenance
  
  // Status tracking
  status    ContentStatus @default(DRAFT)
  
  // Intake data
  topic     String
  angle     String?
  keywords  String[]
  hashtags  String[]
  offerUrl  String?
  
  // Seed content (optional)
  seedUrls  String[]
  seedBrief Json?    // SeedBrief type
  
  // Generated content paths
  contentPath String? // /review/[slug]/
  
  // Scheduling
  scheduleData Json?   // Schedule with ISO datetimes
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  publishedAt DateTime?

  project  Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  comments Comment[]

  @@unique([projectId, slug])
  @@map("content_weeks")
}

enum ContentStatus {
  DRAFT
  REVIEWED
  APPROVED
  SCHEDULED
  POSTED
}

model Comment {
  id            String   @id @default(cuid())
  contentWeekId String
  userId        String
  assetType     String   // "blog", "video", "facebook", etc.
  content       String   @db.Text
  resolved      Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  contentWeek ContentWeek @relation(fields: [contentWeekId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id])

  @@map("comments")
}

// ==================== SETTINGS ====================

model WorkspaceSettings {
  id          String @id @default(cuid())
  workspaceId String @unique

  // Platform credentials (encrypted)
  facebookToken   String? @db.Text
  instagramToken  String? @db.Text
  linkedinToken   String? @db.Text
  gbpToken        String? @db.Text
  tiktokToken     String? @db.Text
  youtubeToken    String? @db.Text
  
  // Email provider
  emailProvider   String? // "sendgrid", "mailchimp", etc.
  emailToken      String? @db.Text
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@map("workspace_settings")
}

